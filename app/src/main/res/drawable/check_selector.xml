<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:drawable="@drawable/check" android:state_checked="true">
        <color android:color="@color/colorOnPrimary" />
    </item>
    <item android:drawable="@drawable/check" android:state_focused="true">
        <color android:color="@color/colorOnPrimary" />
    </item>

    <item android:drawable="@drawable/uncheck" android:state_checked="false">
        <color android:color="@color/grey" />
    </item>
    <item android:drawable="@drawable/uncheck" android:state_focused="false">
        <color android:color="@color/grey" />
    </item>
</selector>